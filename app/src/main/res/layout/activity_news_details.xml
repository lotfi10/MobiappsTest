<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainlayout"
        android:orientation="vertical">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_news_image"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%"
                tools:src="@drawable/ic_launcher" />

        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/card_news_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            tools:text="News Title" />

        <TextView
            android:id="@+id/card_news_time"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#808080"
            tools:text="Today" />

        <TextView
            android:id="@+id/card_news_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:maxLines="4"
            tools:text="This is a sample content This is a sample content This is a sample content This is a sample content This is a sample content This is a sample content This is a sample content This is a sample content This is a sample content " />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/mainlayout"
    android:layout_gravity="bottom"
    android:orientation="vertical">
    <Button
        android:id="@+id/showsite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/btnbackground"
        android:text="@string/btnshowwebsite" />
</LinearLayout>
</RelativeLayout>